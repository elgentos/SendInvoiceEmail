<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <sales_email>
            <groups>
                <invoice>
                    <fields>
                        <send_invoice_email_for_payment_methods>
                            <label>Send invoice email for payment methods</label>
                            <comment>Not choosing an option here does not mean the invoices will not be sent; this is merely used to force sending an invoice email when it hasn't been mailed yet.</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>Elgentos_SendInvoiceEmail_Model_Paymentmethods</source_model>
                            <sort_order>250</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_invoice_email_for_payment_methods>
                    </fields>
                </invoice>
            </groups>
        </sales_email>
    </sections>
</config>
